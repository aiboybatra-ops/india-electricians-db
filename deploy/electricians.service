[Unit]
Description=Electricians Database Web App
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/india_electricians_scraper
Environment="PATH=/opt/india_electricians_scraper/venv/bin"
Environment="GOOGLE_PLACES_API_KEY=your_api_key_here"
ExecStart=/opt/india_electricians_scraper/venv/bin/gunicorn web_app:app --bind 0.0.0.0:8000 --workers 4
Restart=always

[Install]
WantedBy=multi-user.target
